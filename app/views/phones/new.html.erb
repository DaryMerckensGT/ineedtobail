<%= simple_form_for([parent, resource]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <label class="string optional control-label" for="confirm_via_text">Send confirmation code via text</label>
    <%= f.check_box :confirm_via_text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
